abstract class S[type S, type T]: R | I
class R[A] extends S[A, A]
class I[A] extends S[A, Int]
//│ abstract class S[S, T]: I[?] | R[?]
//│ class R[A] extends S {
//│   constructor()
//│ }
//│ class I[A] extends S {
//│   constructor()
//│ }

fun f[A, B](x: A, ev: S[A, B]): B = 
    if ev is 
        R then (x : ev.S) : ev.T
        I then 1 : ev.T
//│ fun f: forall 'A 'B. (x: 'A, ev: S['A, 'B]) -> 'B

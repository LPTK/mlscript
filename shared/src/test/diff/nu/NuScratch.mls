abstract class Fmt[type T]
class D[T](k: Fmt[T]) extends Fmt[Int -> T]
class B[T](k: Fmt[T]) extends Fmt[Bool -> T]
class L[T](s: string, k: Fmt[T]) extends Fmt[T]
class E extends Fmt[string]

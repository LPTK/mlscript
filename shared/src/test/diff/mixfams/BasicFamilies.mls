mixin A {
  mixin M { fun x = [super.x] }
}
//│ mixin A() {
//│   mixin M() {
//│     super: {x: 'x}
//│     fun x: ('x,)
//│   }
//│ }

mixin B {
  mixin M { fun x = 0 }
}
//│ mixin B() {
//│   mixin M() {
//│     fun x: 0
//│   }
//│ }

// * Notice how currently the mixin from B is destructively overridden by the one from A

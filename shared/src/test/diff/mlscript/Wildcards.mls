def bar: Bar[?]
//│ bar: Bar[?]

:e
rec def bar = Bar{value = bar; id}
//│ 'value
//│   where
//│     'value :> Bar['A] with {id: forall 'a. 'a -> 'a, value: 'value}
//│     'A :> 'value
//│   <:  bar:

class Nil
class Cons[a]: { head: a; tail: List[a] }
type List[a] = Nil | Cons[a]
Nil = Nil {}
Cons (head, tail) = Cons { head; tail }
//│ Defined class Nil
//│ Defined class Cons[+a]
//│ Defined type alias List[+a]
//│ Nil: Nil
//│    = Nil {}
//│ Cons: ('b & 'head & 'a, List['a] & 'c & 'tail,) -> ((Cons['a] with {head: 'head, tail: 'tail}) | 'd)
//│     = [Function: Cons1]


// let nfind table key =
//   begin match find table key with
//   | None -> fun f x -> x
//   | Some n -> n
//   end
def nfind table key =
  let opt = find table key in
  case opt of
  { None -> fun f -> fun x -> x
  | Some -> opt.val
  }
//│ nfind: (List['a | {_1: 'b & 'c} & 'a0 & 'd | {_1: 'e & 'f, _2: 'g & 'h & 'val & 'a1} & 'a2 & 'a3 & 'a4 & 'i & 'a5 & 'j | {_2: 'k & 'l & 'val0 & 'a6} & 'a7 & 'm] & 'n) -> (forall 'o, 'val1. 'o -> (forall 'p. 'p -> (forall 'q. 'q -> 'q) | 'val | 'val0 | 'val1))
//│      = [Function: nfind]


// let succ (n:Int) = fun f x -> f (n f x)
def succ (n: ChurchInt) = fun f -> fun x -> f (n f x)
def succ_ n = fun f -> fun x -> f (n f x)
//│ succ: ChurchInt -> (forall 'b. 'b -> (forall 'c, 'd, 'e, 'a, 'b. (('a & 'd & 'e) -> 'c
//│   where
//│     'b <: 'a -> ('a & 'd) & 'd -> 'c)))
//│     = [Function: succ]
//│ succ_: 'a -> (forall 'b. 'b -> (forall 'b, 'c, 'd, 'e, 'f, 'a. ('c -> 'f
//│   where
//│     'a <: 'b -> ('c -> 'd & 'e)
//│     'b <: 'd -> 'f)))
//│      = [Function: succ_]


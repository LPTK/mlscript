// callcc’ : ∀a:⋆. ((∀b:⋆. a → b) → a) → a
// callcc : ∀a:⋆.∀b:⋆. ((a → b) → a) → a
// callcc = callcc’

def callcc' : forall 'A. ((forall 'B. 'A -> 'B) -> 'A) -> 'A
//│ callcc': (('A -> nothing) -> 'A) -> 'A
//│        = <missing implementation>

def callcc : forall 'A. forall 'B. (('A -> 'B) -> 'A) -> 'A
//│ callcc: (('A -> nothing) -> 'A) -> 'A
//│       = <missing implementation>

def callcc = callcc'
//│ (('A -> nothing) -> 'A) -> 'A
//│   <:  callcc:
//│ (('A -> nothing) -> 'A) -> 'A
//│       = <no result>
//│         callcc' is not implemented



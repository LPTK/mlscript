// * Example usage

fun mkSeq: [A, E] -> (() ->{E} A) ->{E} Seq[out A, out E]
fun head: [A, E] -> Seq[out A, out E] ->{E} A
//│ Type: ⊤

region r in
  let sum = r.ref 0
  let s1 = mkSeq of () =>
    sum := !sum + 1
    !sum
  let s2 = mapi(s1, r) of (x, i) => x * i
  !sum + head(s2)
